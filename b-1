    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Woody Puzzle Clone</title>
    <style>
        :root {
            --bg-color: #1a1a1a;
            --board-bg: #3d2b1f;
            --slot-color: #2a1e16;
            --wood-light: #e6ba8d;
            --wood-dark: #bc8a5f;
        }

        body {
            background-color: var(--bg-color);
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
            touch-action: none;
            color: white;
        }

        .header { margin: 20px; text-align: center; }
        .iq-score { font-size: 24px; color: #f3e5ab; font-weight: bold; }

        /* 遊戲盤面 */
        .board {
            display: grid;
            grid-template-columns: repeat(6, 50px);
            grid-template-rows: repeat(6, 50px);
            gap: 4px;
            background: var(--board-bg);
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

        .cell {
            width: 50px;
            height: 50px;
            background: var(--slot-color);
            border-radius: 4px;
            box-shadow: inset 2px 2px 5px rgba(0,0,0,0.3);
        }

        .cell.filled {
            background: linear-gradient(145deg, var(--wood-light), var(--wood-dark));
            box-shadow: 2px 2px 5px rgba(0,0,0,0.4);
        }

        /* 底部拼塊區 */
        .tray {
            margin-top: 50px;
            display: flex;
            gap: 30px;
            height: 120px;
        }

        .shape-container {
            cursor: grab;
            display: grid;
            gap: 2px;
            position: relative;
        }

        .block {
            width: 45px;
            height: 45px;
            background: linear-gradient(145deg, var(--wood-light), var(--wood-dark));
            border-radius: 4px;
            pointer-events: none;
        }
    </style>
</head>
<body>

    <div class="header">
        <div class="iq-score">IQ: <span id="iq-val">100</span></div>
    </div>

    <div class="board" id="board"></div>

    <div class="tray" id="tray">
        </div>

    <script>
        const BOARD_SIZE = 6;
        const boardElement = document.getElementById('board');
        const trayElement = document.getElementById('tray');
        let boardState = Array(BOARD_SIZE).fill().map(() => Array(BOARD_SIZE).fill(false));

        // 初始化盤面
        function createBoard() {
            boardElement.innerHTML = '';
            for (let r = 0; r < BOARD_SIZE; r++) {
                for (let c = 0; c < BOARD_SIZE; c++) {
                    const cell = document.createElement('div');
                    cell.className = 'cell';
                    cell.dataset.r = r;
                    cell.dataset.c = c;
                    boardElement.appendChild(cell);
                }
            }
        }

        // 定義一些形狀 (0:空, 1:木塊)
        const SHAPES = [
            [[1, 1], [1, 1]], // 方塊
            [[1, 1, 1]],      // 長條
            [[1, 0], [1, 1]], // L型
            [[1]]             // 單點
        ];

        function createShapeInTray() {
            const shapeData = SHAPES[Math.floor(Math.random() * SHAPES.length)];
            const container = document.createElement('div');
            container.className = 'shape-container';
            container.style.gridTemplateColumns = `repeat(${shapeData[0].length}, 47px)`;
            
            shapeData.forEach((row, r) => {
                row.forEach((cell, c) => {
                    const block = document.createElement('div');
                    block.className = cell ? 'block' : '';
                    block.style.visibility = cell ? 'visible' : 'hidden';
                    container.appendChild(block);
                });
            });

            // 簡易拖拽邏輯
            container.onmousedown = (e) => startDrag(e, container, shapeData);
            container.ontouchstart = (e) => startDrag(e.touches[0], container, shapeData);
            
            trayElement.appendChild(container);
        }

        function startDrag(e, el, data) {
            let shiftX = 50; 
            let shiftY = 50;
            el.style.position = 'absolute';
            el.style.zIndex = 1000;

            function moveAt(pageX, pageY) {
                el.style.left = pageX - shiftX + 'px';
                el.style.top = pageY - shiftY + 'px';
            }

            function onMouseMove(event) {
                const moveEvent = event.touches ? event.touches[0] : event;
                moveAt(moveEvent.pageX, moveEvent.pageY);
            }

            document.addEventListener('mousemove', onMouseMove);
            document.addEventListener('touchmove', onMouseMove);

            el.onmouseup = el.ontouchend = () => {
                document.removeEventListener('mousemove', onMouseMove);
                document.removeEventListener('touchmove', onMouseMove);
                
                // 這裡可以加入落點判斷邏輯（判斷座標是否在 board 內）
                // 為了簡單，目前放開後會直接消失並重新生成
                el.remove();
                createShapeInTray();
                document.getElementById('iq-val').innerText = parseInt(document.getElementById('iq-val').innerText) + 2;
            };
        }

        createBoard();
        createShapeInTray();
        createShapeInTray();
    </script>
</body>
</html>
